{% extends 'base.html.twig' %}

{% block title %}Détails du responsable{% endblock %}

{% block body %}
<h1>Responsable #{{ responsable.id }}</h1>

<ul>
    <li><strong>Nom :</strong> {{ responsable.nom }}</li>
    <li><strong>Prénom :</strong> {{ responsable.prenom }}</li>
    <li><strong>Email :</strong> {{ responsable.email }}</li>
</ul>

<a href="{{ path('responsable_index') }}">← Retour à la liste</a> |
<a href="{{ path('responsable_edit', {'id': responsable.id}) }}">Modifier</a>

<form method="post" action="{{ path('responsable_delete', {'id': responsable.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');" style="display:inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ responsable.id) }}">
    <button type="submit" style="background:none;border:none;color:red;cursor:pointer;">Supprimer</button>
</form>

{% endblock %}
