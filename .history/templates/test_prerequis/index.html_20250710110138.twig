{% extends 'base.html.twig' %}

{% block title %}Liste des tests prérequis{% endblock %}

{% block body %}
<h1>Tests prérequis</h1>

<a href="{{ path('test_prerequis_new') }}">Créer un nouveau test</a>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for test in tests %}
        <tr>
            <td>{{ test.id }}</td>
            <td>{{ test.titre }}</td>
            <td>{{ test.description|length > 50 ? test.description|slice(0, 50) ~ '...' : test.description }}</td>
            <td>
                <a href="{{ path('test_prerequis_show', {'id': test.id}) }}">Voir</a>
                <a href="{{ path('test_prerequis_edit', {'id': test.id}) }}">Modifier</a>
                <form method="post" action="{{ path('test_prerequis_delete', {'id': test.id}) }}" style="display:inline-block" onsubmit="return confirm('Confirmer la suppression ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ test.id) }}">
                    <button type="submit" style="background:none;border:none;color:red;cursor:pointer;">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="4">Aucun test trouvé.</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
