{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
<h1>Liste des formations</h1>

<a href="{{ path('formation_new') }}">Créer une nouvelle formation</a>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Thème(s)</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for formation in formations %}
        <tr>
            <td>{{ formation.id }}</td>
            <td>{{ formation.nom }}</td>
            <td>
                {% for theme in formation.themes %}
                    {{ theme.nom }}{% if not loop.last %}, {% endif %}
                {% else %}
                    Aucun
                {% endfor %}
            </td>
            <td>{{ formation.description|length > 50 ? formation.description|slice(0, 50) ~ '...' : formation.description }}</td>
            <td>
                <a href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                <form method="post" action="{{ path('formation_delete', {'id': formation.id}) }}" style="display:inline-block" onsubmit="return confirm('Confirmer la suppression ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                    <button type="submit" style="background:none;border:none;color:red;cursor:pointer;">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="5">Aucune formation trouvée.</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
