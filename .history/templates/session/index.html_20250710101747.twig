{% extends 'base.html.twig' %}

{% block title %}Sessions{% endblock %}

{% block body %}
<h1>Sessions</h1>

<table>
    <thead>
        <tr>
            <th>Formation</th>
            <th>Date début</th>
            <th>Date fin</th>
            <th>Lieu</th>
            <th>Formateur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for session in sessions %}
        <tr>
            <td>{{ session.formation.titre }}</td>
            <td>{{ session.dateDebut|date('d/m/Y') }}</td>
            <td>{{ session.dateFin|date('d/m/Y') }}</td>
            <td>{{ session.lieu }}</td>
            <td>{{ session.formateur.nom }} {{ session.formateur.prenom }}</td>
            <td><a href="{{ path('inscription_new', {'session_id': session.id}) }}">S'inscrire</a></td>
        </tr>
    {% else %}
        <tr><td colspan="6">Aucune session trouvée.</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
