{% extends 'base.html.twig' %}

{% block title %}Liste des formateurs{% endblock %}

{% block body %}
<h1>Formateurs</h1>

<a href="{{ path('formateur_new') }}">Ajouter un formateur</a>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for formateur in formateurs %}
        <tr>
            <td>{{ formateur.id }}</td>
            <td>{{ formateur.nom }}</td>
            <td>{{ formateur.email }}</td>
            <td>
                <a href="{{ path('formateur_show', {'id': formateur.id}) }}">Voir</a>
                <a href="{{ path('formateur_edit', {'id': formateur.id}) }}">Modifier</a>
                <form method="post" action="{{ path('formateur_delete', {'id': formateur.id}) }}" style="display:inline-block" onsubmit="return confirm('Confirmer la suppression ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formateur.id) }}">
                    <button type="submit" style="background:none;border:none;color:red;cursor:pointer;">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="4">Aucun formateur trouv√©.</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
