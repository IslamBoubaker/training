{% extends 'base.html.twig' %}

{% block title %}Formateur index{% endblock %}

{% block body %}
    <h1>Formateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Cv</th>
                <th>Note</th>
                <th>EstValide</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formateur in formateurs %}
            <tr>
                <td>{{ formateur.id }}</td>
                <td>{{ formateur.nom }}</td>
                <td>{{ formateur.prenom }}</td>
                <td>{{ formateur.email }}</td>
                <td>{{ formateur.cv }}</td>
                <td>{{ formateur.note }}</td>
                <td>{{ formateur.estValide ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_formateur_show', {'id': formateur.id}) }}">show</a>
                    <a href="{{ path('app_formateur_edit', {'id': formateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formateur_new') }}">Create new</a>
{% endblock %}
